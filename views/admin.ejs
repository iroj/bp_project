<div class="container" id="unauthenticated">
  <div class="row text-center">
    <div class="col-md-12 login-form">
      <form id="loginForm" action="javascript:void(0);">
        <div class="form-group">
          <input
            id="username"
            class="form-control"
            placeholder="Username"
            type="text"
          />
        </div>
        <div class="form-group">
          <input
            id="password"
            class="form-control"
            placeholder="Password"
            type="password"
          />
        </div>

        <div class="form-group">
          <button type="submit" class="btn btn-primary" id="loginSubmitBtn">
            Login
          </button>
        </div>
      </form>
    </div>
    <div
      class="toast auth-toast"
      id="worngCred"
      role="alert"
      aria-live="polite"
      aria-atomic="true"
      data-delay="10000"
    >
      <div role="alert" aria-live="assertive" aria-atomic="true">
        <div class="row">
          <div class="col-md-12">
            <div class="toast-header">
              <strong class="mr-auto">Auth Failed</strong>
            </div>
            <div class="toast-body">Incorrect username or password</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container" id="authenticated" style="display: none">
  <div class="row text-center">AUTHENTICATED</div>

  <div class="row">
    <div class="col-md-12" id="orderDetailsContainer">


    </div>
  </div>
</div>
